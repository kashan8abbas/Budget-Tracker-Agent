run = "uvicorn app:app --host 0.0.0.0 --port 8000"
language = "python3"
entrypoint = "app.py"

[deploy]
run = ["sh", "-c", "uvicorn app:app --host 0.0.0.0 --port $PORT"]

[env]
PYTHONPATH = "${PYTHONPATH}:."

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[packager]
language = "python3"
ignoredPackages = ["unit_tests"]

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

[unitTest]
language = "python3"

